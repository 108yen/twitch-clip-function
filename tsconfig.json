{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "baseUrl": "./",
    "traceResolution": true,
    "resolveJsonModule": true,
    "types": ["@types/node", "vitest/globals"],
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "@types",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    "**/*.mts"
  ],
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
