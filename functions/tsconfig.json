{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "baseUrl": "./",
    "traceResolution": true,
    "resolveJsonModule": true,
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "jest"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "lib",
    "test"
  ]
}